<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#54CDC1</item>
        <item name="colorPrimaryDark">#36859E</item>
        <item name="colorAccent">@color/colorPrimaryLight</item>
    </style>
    <style name="FullScreenDialogStyle" parent="Theme.MaterialComponents.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimaryDark">#3AABCF</item>
        <item name="colorPrimary">#3AABCF</item>

        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

<!--    <style name="DialogSlideAnim" parent="@android:style/Theme.Dialog">-->
