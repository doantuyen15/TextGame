<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/hello"
        android:layout_width="69dp"
        android:layout_height="34dp"
        android:layout_marginStart="42dp"
        android:layout_marginTop="52dp"
        android:gravity="center_vertical"
        android:lineSpacingExtra="0sp"
        android:text="Hello"
        android:textAppearance="@style/hello"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Tag_Email"
        android:layout_width="330dp"
        android:layout_height="28dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="42dp"
        android:layout_marginTop="85dp"
        android:gravity="top"
        android:text="Email"
        android:textAppearance="@style/email"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_first" />

    <EditText
        android:id="@+id/Email"
        android:layout_width="294dp"
        android:layout_height="52dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/background_border"
        android:ems="10"
        android:inputType="textEmailAddress"
        app:layout_constraintStart_toStartOf="@+id/Tag_Email"
        app:layout_constraintTop_toBottomOf="@+id/Tag_Email" />

    <TextView
        android:id="@+id/Tag_Pass"
        android:layout_width="330dp"
        android:layout_height="28dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="42dp"
        android:layout_marginTop="5dp"
        android:gravity="top"
        android:text="Password"
        android:textAppearance="@style/email"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Email" />


    <EditText
        android:id="@+id/Password"
        android:layout_width="294dp"
        android:layout_height="52dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/background_border"
        android:gravity="center_vertical"
        android:inputType="textPassword"
        android:paddingLeft="16dp"
        android:textColorHint="#FFFFFF"
        app:layout_constraintStart_toStartOf="@+id/Tag_Pass"
        app:layout_constraintTop_toBottomOf="@+id/Tag_Pass" />

    <TextView
        android:id="@+id/forgot_pass"
        android:layout_width="121dp"
        android:layout_height="21dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="76dp"
        android:alpha="0.5"
        android:gravity="right|top"
        android:text="Forgot Password?"
        android:textAppearance="@style/forgot_pass"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Password" />

    <TextView
        android:id="@+id/sigup_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:gravity="center_horizontal|center"
        android:text="Don't have an account? Sign-up"
        android:textAppearance="@style/don_t_have_"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signupwithgg"
        tools:visibility="visible" />

    <Button
        android:id="@+id/signupwithgg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:drawableLeft="@drawable/googleicon"
        android:gravity="center_horizontal|center"
        android:paddingStart="33dp"
        android:paddingEnd="44dp"
        android:text="Signup with Google"
        android:textAppearance="@style/signup_witgg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_validate" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="76dp"
        android:layout_height="62dp"
        android:layout_marginTop="40dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/hello" />

    <TextView
        android:id="@+id/login_first"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="42dp"
        android:layout_marginTop="21dp"
        android:gravity="top"
        android:text="login first to continue"
        android:textAppearance="@style/login_first"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hello" />

    <Button
        android:id="@+id/login_validate"
        android:layout_width="333dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="75dp"
        android:text="Login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/forgot_pass" />


</androidx.constraintlayout.widget.ConstraintLayout>
